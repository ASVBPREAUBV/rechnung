doctype html
html(lang='de')
    head
        meta(charset='utf-8')
        link(rel="stylesheet" type="text/css" href="static/css/style.css")
        link(href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet")
    body
        #page-wrap
            #header INVOICE
            #identity
                #address
                    p #{config.name}
                    p #{config.street}
                    p #{config.city}
                    p #{config.phone}
                #logo
                    img#image(src='static/img/your-logo.png', alt='logo')
            #customer
                #title
                    p #{invoice.customer.project}
                    p #{invoice.customer.customer}
                    p #{invoice.customer.address}
                    p #{invoice.customer.city}
                table#meta
                    tr
                        td.meta-head Invoice &#8470
                        td #{invoice.invoice.no}
                    tr
                        td.meta-head Date
                        td#date #{date}
                    tr
                        td.meta-head Amount Due
                        td.due $875.00
            table#items
                tr.table-head
                    th Price
                    th Item
                    th Cost
                    th Subtotal
                - var subtotal = 0;
                each item in invoice.items
                    tr.item-row
                        td.qty #{item.number}
                        td.item-name #{item.desc}
                        td.cost $#{item.price}
                        td.price $#{parseFloat(item.number * item.price).toFixed(2)}
                        - subtotal+=(item.number * item.price);
                tr.sum-row
                    td.blank(colspan='2')
                    td.total-line(colspan='1') Subtotal
                    td.total-value
                        #subtotal $#{subtotal}
                tr
                    td.blank(colspan='2')
                    td.total-line(colspan='1') Tax
                    td.total-value  $#{parseFloat(subtotal * config.tax).toFixed(2)}
                    - var tax=(subtotal * config.tax);
                tr
                    td.blank(colspan='2')
                    td.total-line.balance(colspan='1') Balance Due
                    td.total-value.balance.due $#{parseFloat(subtotal + tax).toFixed(2)}
            #terms
                h5 Terms
                each note in invoice.invoice.notes
                    p #{note}
